<%- include("partials/header") %>

<div>
    <div >
        Welcome to  Sign up
    </div>
</div>
<div>
    <form action="/signup/patients" method="POST">
        <div>
            <label for="name"> Name : </label>
            <input type="text" name="name" placeholder="Enter your name" required>
        </div>
        <div>
            <label for="username"> Username :</label>
            <input type="email" name="username" placeholder="Enter your email" required>
        </div>
        <div>
            <label for="password"> Password :</label>
            <input type="password" name="password" minlength="8" placeholder="Should be atleast 8 characters" required>
        </div>
        <!-- ----------------------------------------------- -->
        <div>
            <label for="dob"> DOB :</label>
            <input type="text" name="dob" placeholder="Enter string" required>
        </div>
        <div>
            <label for="age">  Age:</label>
            <input type="text" name="age" placeholder="Enter string" required>
        </div>
        <div>
            <label for="gender">  Gender:</label>
            <input type="text" name="gender" placeholder="Enter string" required>
        </div>
        <div>
            <label for="address">  Address:</label>
            <input type="text" name="address" placeholder="Enter string" required>
        </div>
        <div>
            <label for="phone">  Phone:</label>
            <input type="text" name="phone" placeholder="Enter string" required>
        </div>
        <div>
            <label for="bloodgroup">  Blood Group:</label>
            <input type="text" name="blood" placeholder="Enter string" required>
        </div>
        <div>
            <label for="mobile">  Phone No:</label>
            <input type="text" name="mobile" placeholder="Enter string" required>
        </div>
        <div>
            <label for="weight">  Weight:</label>
            <input type="text" name="weight" placeholder="Enter string" required>
        </div>
        <div>
            <label for="insuranceno">  Insurance No:</label>
            <input type="text" name="insurance" placeholder="Enter string" required>
        </div>
        <div>
            <label for="emergency">  Emergency Name:</label>
            <input type="text" name="emergencyname" placeholder="Enter string" required>
        </div>
        <div>
            <label for="emergency">  Emergency Number:</label>
            <input type="text" name="emergencynumber" placeholder="Enter string" required>
        </div>
        <div>
            <label for="allergy">  Allergy:</label>
            <input type="text" name="allergy" placeholder="Enter string" required>
        </div>
        <div>
            <label for="patienthistory">  Patient History:</label>
            <input type="text" name="patienthistory" placeholder="Enter string" required>
        </div>
        <div>
            <button type="submit">Register</button>
        </div>
    </form>
    <div>
        Already a user?<a href="/login"><button>Login</button></a>
    </div>
</div>

<%- include("partials/footer") %>